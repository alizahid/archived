<header>
	<h1>Sign up</h1>
</header>
<main>
	<form {{action 'signup' on='submit'}}>
		{{error-message error}}
		<label>
			{{input type="text" value=name placeholder="Name" required=true}}
		</label>
		<label>
			{{input type="email" value=email placeholder="Email" required=true}}
		</label>
		<label class="phone">
			<span>{{code}}</span>
			{{input type="tel" value=phone placeholder="Phone" required=true}}
		</label>
		<label>
			{{input type="password" value=password placeholder="Password" required=true}}
		</label>
		<p>
			<button type="submit">Sign up</button>
			{{link-to 'Login' 'login'}}
		</p>
	</form>
</main>
