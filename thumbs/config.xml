<?xml version='1.0' encoding='utf-8'?>
<widget id="com.designplox.thumbs" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>Thumbs</name>
	<description>A game of thumbs</description>
	<author email="ali@designplox.co" href="https://designplox.com/thumbs">Ali Zahid</author>
	<content src="index.html"/>
	<plugin name="cordova-plugin-whitelist" spec="1"/>
	<access origin="*"/>
	<allow-intent href="http://*/*"/>
	<allow-intent href="https://*/*"/>
	<allow-intent href="tel:*"/>
	<allow-intent href="sms:*"/>
	<allow-intent href="mailto:*"/>
	<allow-intent href="geo:*"/>
	<platform name="android">
		<allow-intent href="market:*"/>
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*"/>
		<allow-intent href="itms-apps:*"/>
	</platform>
	<engine name="ios" spec="~4.3.1"/>
	<preference name="DisallowOverscroll" value="true"/>
	<preference name="Orientation" value="landscape"/>
	<hook type="before_prepare" src="scripts/build.js"/>
</widget>
