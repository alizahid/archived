<header>
	{{back-button}}
	<h1>Orders</h1>
</header>
<main class="orders full">
	<ul>
		{{#each orders as |order|}}
		{{#link-to 'orders.order' order tagName="li"}}
			<h2>{{order.id}}</h2>
			<p>
				Total {{format-currency order.total}} &#183;
				Created {{moment-from-now order.created}}
			</p>
			<p class={{order.status}}>{{order.status}}</p>
		{{/link-to}}
		{{/each}}
	</ul>
</main>
